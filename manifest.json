{

  "manifest_version": 2,
  "name": "Datum:Data Usage Statistics",
  "version": "1.0",

  "description": "Measure data usage from Firefox and also Display Data Usage Statistics per site",

  "icons": {
    "48": "icons/icon48.png",
	  "96":"icons/icon96.png"
  },
  "background":{
  "scripts":["monitor.js"]
  
  },
"browser_action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Datum:Data Usage Statistics",
    "default_popup": "screen.html",
  "browser_style":true
  }

  ,
  "permissions":["webRequest","storage"]

}
